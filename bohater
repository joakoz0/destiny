import pygame
pygame.init()

okno = pygame.display.set_mode((1280,720))

idz_prawo = [pygame.image.load('prawo1.png'), pygame.image.load('prawo2.png')]
idz_lewo = [pygame.image.load('lewo1.png'), pygame.image.load('lewo2.png')]
idz_prosto = [pygame.image.load('3.png'), pygame.image.load('2.png')]
idz_tyl = [pygame.image.load('tyl1.png'), pygame.image.load('tyl2.png')]

tlo = pygame.image.load('tlo.jpg')
stoj = pygame.image.load('1.png')

clock = pygame.time.Clock()

class Bohater():
    def __init__(self, szerokosc_poczatkowa, wysokosc_poczatkowa):
        self.szerokosc_poczatkowa = szerokosc_poczatkowa
        self.wysokosc_poczatkowa = wysokosc_poczatkowa
        self.ruch = 4
        self.lewo = False
        self.prawo = False
        self.prosto = False
        self.tyl = False
        self.licznik = 0

    def ruchy_bohatera(self, okno):
        if self.licznik +1 >= 6:
            self.licznik = 0

        if self.lewo:
            okno.blit(idz_lewo[self.licznik//3], (self.szerokosc_poczatkowa,self.wysokosc_poczatkowa))
            self.licznik += 1
        elif self.prawo:
            okno.blit(idz_prawo[self.licznik//3], (self.szerokosc_poczatkowa,self.wysokosc_poczatkowa))
            self.licznik += 1
        elif self.prosto:
            okno.blit(idz_prosto[self.licznik//3], (self.szerokosc_poczatkowa,self.wysokosc_poczatkowa))
            self.licznik += 1
        elif self.tyl:
            okno.blit(idz_tyl[self.licznik//3], (self.szerokosc_poczatkowa,self.wysokosc_poczatkowa))
            self.licznik += 1
        else:
            okno.blit(stoj, (self.szerokosc_poczatkowa, self.wysokosc_poczatkowa))

def okno_gry():
    okno.blit(tlo, (0,0))
    gracz.ruchy_bohatera(okno)

    pygame.display.update()

#główna część
gracz = Bohater(600, 600)
run = True

while run:
    clock.tick(16)

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False

    klawisz = pygame.key.get_pressed()

    if klawisz[pygame.K_LEFT]:
        gracz.szerokosc_poczatkowa -= gracz.ruch
        gracz.lewo = True
        gracz.prawo = False
        gracz.tyl = False
        gracz.prosto = False

    elif klawisz[pygame.K_RIGHT]:
        gracz.szerokosc_poczatkowa += gracz.ruch
        gracz.prawo = True
        gracz.lewo = False
        gracz.tyl = False
        gracz.prosto = False

    elif klawisz[pygame.K_UP]:
        gracz.wysokosc_poczatkowa -= gracz.ruch
        gracz.prosto = True
        gracz.lewo = False
        gracz.prawo = False
        gracz.tyl = False

    elif klawisz[pygame.K_DOWN]:
        gracz.wysokosc_poczatkowa += gracz.ruch
        gracz.tyl = True
        gracz.prosto = False
        gracz.lewo = False
        gracz.prawo = False
    else:
        gracz.lewo = False
        gracz.prawo = False
        gracz.tyl = False
        gracz.prosto = False

    okno_gry()

pygame.quit()
